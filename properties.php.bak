$page_title = "Properties - APS Dream Homes";
$meta_description = "Browse our exclusive collection of premium properties across Uttar Pradesh. Find your dream home with APS Dream Homes.";
$current_page = 'properties';

// Include necessary files
require_once __DIR__ . '/includes/config.php';
require_once __DIR__ . '/includes/functions.php';
require_once __DIR__ . '/includes/helpers/format_helpers.php';

// Start secure session
start_secure_session('aps_dream_home');

// Generate CSRF token if not exists
if (empty($_SESSION['csrf_token'])) {
    $_SESSION['csrf_token'] = bin2hex(random_bytes(32));
}

// Process search/filter parameters
$search_params = [
    'location' => isset($_GET['location']) ? htmlspecialchars($_GET['location'], ENT_QUOTES, 'UTF-8') : '',
    'type' => isset($_GET['type']) ? htmlspecialchars($_GET['type'], ENT_QUOTES, 'UTF-8') : '',
    'min_price' => filter_input(INPUT_GET, 'min_price', FILTER_VALIDATE_FLOAT) ?? 0,
    'max_price' => filter_input(INPUT_GET, 'max_price', FILTER_VALIDATE_FLOAT) ?? PHP_FLOAT_MAX,
    'bedrooms' => filter_input(INPUT_GET, 'bedrooms', FILTER_VALIDATE_INT) ?? 0,
    'bathrooms' => filter_input(INPUT_GET, 'bathrooms', FILTER_VALIDATE_INT) ?? 0,
    'page' => max(1, filter_input(INPUT_GET, 'page', FILTER_VALIDATE_INT) ?? 1),
    'per_page' => 12 // Items per page
];

// Get sort parameters
$sort = isset($_GET['sort']) ? htmlspecialchars($_GET['sort'], ENT_QUOTES, 'UTF-8') : 'featured';
$order = isset($_GET['order']) ? htmlspecialchars($_GET['order'], ENT_QUOTES, 'UTF-8') : 'DESC';

// Include header template
require_once __DIR__ . '/includes/templates/header.php';

// Database connection and property fetching
try {
    $db = DatabaseConfig::getConnection();
    
    // Build base query with parameter placeholders
    $query = "SELECT SQL_CALC_FOUND_ROWS
                p.id, p.title, p.location, p.price, p.bedrooms, p.bathrooms,
                p.area, p.area_unit, p.featured_image, p.listing_status, p.is_featured,
                p.created_at, p.updated_at, p.description,
                pt.name as property_type, pt.slug as type_slug,
                u.first_name, u.last_name, u.phone as agent_phone, u.email as agent_email,
                (SELECT GROUP_CONCAT(pi.image_url) FROM property_images pi WHERE pi.property_id = p.id) as images,
                (SELECT GROUP_CONCAT(pa.name) FROM property_amenities pa 
                 JOIN property_amenity_mapping pam ON pa.id = pam.amenity_id 
                 WHERE pam.property_id = p.id) as amenities
              FROM properties p
              LEFT JOIN property_types pt ON p.property_type_id = pt.id
              LEFT JOIN users u ON p.agent_id = u.id
              WHERE p.status = 'active'";
    
    // Add filters to query
    $params = [];
    $types = [];
    
    if (!empty($search_params['location'])) {
        $query .= " AND p.location LIKE ?";
        $params[] = '%' . $search_params['location'] . '%';
        $types[] = 's';
    }
    
    if (!empty($search_params['type'])) {
        $query .= " AND pt.slug = ?";
        $params[] = $search_params['type'];
        $types[] = 's';
    }
    
    if (!empty($search_params['min_price'])) {
        $query .= " AND p.price >= ?";
        $params[] = $search_params['min_price'];
        $types[] = 'd';
    }
    
    if (!empty($search_params['max_price']) && $search_params['max_price'] < PHP_FLOAT_MAX) {
        $query .= " AND p.price <= ?";
        $params[] = $search_params['max_price'];
        $types[] = 'd';
    }
    
    if (!empty($search_params['bedrooms'])) {
        $query .= " AND p.bedrooms >= ?";
        $params[] = $search_params['bedrooms'];
        $types[] = 'i';
    }
    
    if (!empty($search_params['bathrooms'])) {
        $query .= " AND p.bathrooms >= ?";
        $params[] = $search_params['bathrooms'];
        $types[] = 'i';
    }
    
    // Add sorting
    $valid_sort_columns = ['price', 'created_at', 'title'];
    $valid_order = ['ASC', 'DESC'];
    
    $sort = in_array(strtolower($sort), $valid_sort_columns) ? $sort : 'created_at';
    $order = in_array(strtoupper($order), $valid_order) ? strtoupper($order) : 'DESC';
    
    $query .= " ORDER BY p.is_featured DESC, $sort $order";
    
    // Add pagination
    $offset = ($search_params['page'] - 1) * $search_params['per_page'];
    $query .= " LIMIT ? OFFSET ?";
    $params[] = $search_params['per_page'];
    $types[] = 'i';
    $params[] = $offset;
    $types[] = 'i';
    
    // Prepare and execute query
    $stmt = $db->prepare($query);
    
    // Bind parameters if any
    if (!empty($params)) {
        $stmt->bind_param(implode('', $types), ...$params);
    }
    
    $stmt->execute();
    $result = $stmt->get_result();
    $properties = $result->fetch_all(MYSQLI_ASSOC);
    
    // Get total count for pagination
    $total_count = $db->query('SELECT FOUND_ROWS()')->fetch_row()[0];
    $total_pages = ceil($total_count / $search_params['per_page']);
    $current_page = $search_params['page'];
    
    // Format properties data
    $formatted_properties = [];
    foreach ($properties as $property) {
        $formatted_properties[] = [
            'id' => $property['id'],
            'title' => htmlspecialchars($property['title']),
            'location' => htmlspecialchars($property['location']),
            'price' => format_currency($property['price']),
            'bedrooms' => $property['bedrooms'],
            'bathrooms' => $property['bathrooms'],
            'area' => number_format($property['area']) . ' ' . $property['area_unit'],
            'image' => !empty($property['featured_image']) ? $property['featured_image'] : '/assets/images/placeholder-property.jpg',
            'status' => ucfirst($property['listing_status']),
            'status_badge_class' => $property['listing_status'] === 'sold' ? 'danger' : 'success',
            'is_featured' => (bool)$property['is_featured'],
            'agent_name' => htmlspecialchars($property['first_name'] . ' ' . $property['last_name']),
            'amenities' => !empty($property['amenities']) ? explode(',', $property['amenities']) : []
        ];
    }
    
    // Get locations for filter dropdown
    $loc_query = "SELECT DISTINCT location FROM properties WHERE status = 'active' ORDER BY location";
    $loc_stmt = $db->prepare($loc_query);
    $loc_stmt->execute();
    $loc_result = $loc_stmt->get_result();
    $locations = $loc_result->fetch_all(MYSQLI_ASSOC);
} catch (Exception $e) {
    error_log('Error in properties.php: ' . $e->getMessage());
    $error_message = 'Unable to load properties at this time. Please try again later.';
    $formatted_properties = [];
    $locations = [];
    $total_pages = 0;
    $current_page = 1;
}
