# Prevent directory listing
Options -Indexes

# Prevent access to specific file types
<FilesMatch "\.(sql|log|bak|inc|cfg|dist|fla|md|ini|sh|json|lock|gitignore|gitattributes|editorconfig|yml|yaml|example)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>
