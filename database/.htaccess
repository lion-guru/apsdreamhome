# Prevent directory listing
Options -Indexes

# Deny access to sensitive files
<FilesMatch "\.(sql|log|bak|inc|cfg|dist|fla|md|ini|sh|json|lock|gitignore|gitattributes|editorconfig|yml|yaml|example)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Allow access to PHP scripts only from localhost
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require local
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
        Allow from 127.0.0.1 ::1
    </IfModule>
</FilesMatch>
