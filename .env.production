# APS Dream Home - Production Environment Configuration
# ===================================================
# COPY THIS FILE TO .env FOR PRODUCTION DEPLOYMENT

# Application Configuration
APP_NAME=APS Dream Home
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration
DB_HOST=localhost
DB_NAME=apsdreamhome_production
DB_USER=apsdreamhome_user
DB_PASS=SECURE_PASSWORD_HERE

# Enhanced Security Configuration
SECURITY_HEADERS=true
SECURITY_CORS_ENABLED=true
SECURITY_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURITY_RATE_LIMITING=true
SECURITY_RATE_LIMIT_MAX=100
SECURITY_RATE_LIMIT_WINDOW=3600
SECURITY_BRUTE_FORCE_PROTECTION=true
SECURITY_BRUTE_FORCE_MAX_ATTEMPTS=3
SECURITY_BRUTE_FORCE_LOCKOUT_TIME=1800
SECURITY_SESSION_TIMEOUT=3600
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_TWO_FACTOR_AUTH=true
SECURITY_AUDIT_LOGGING=true
SECURITY_FILE_UPLOAD_SCAN=true
SECURITY_SQL_INJECTION_PROTECTION=true
SECURITY_XSS_PROTECTION=true
SECURITY_CLICKJACKING_PROTECTION=true

# SSL Configuration
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key
SSL_CHAIN_PATH=/path/to/intermediate.crt

# Email Configuration (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=SECURE_SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=System Administrator

# API Configuration
API_RATE_LIMIT=1000
API_VERSION=v1
API_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10M
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_VIRUS_SCAN=true

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# Queue Configuration
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Monitoring
MONITORING_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
APM_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30

# Performance
PERFORMANCE_MONITORING=true
SLOW_QUERY_LOG=true
MEMORY_LIMIT=256M
