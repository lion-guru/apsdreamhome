{
  "name": "aps-dream-home",
  "version": "2.0.0",
  "description": "Professional Real Estate Platform - APS Dream Home (Enhanced)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.enhanced.js",
    "dev:legacy": "vite --config vite.config.js",
    "build": "vite build --config vite.config.enhanced.js",
    "build:analyze": "vite build --config vite.config.enhanced.js --mode analyze",
    "preview": "vite preview --config vite.config.enhanced.js",
    "serve": "php -S localhost:8000 -t .",
    "start": "run-p dev serve",
    "lint": "eslint assets/js/**/*.js --fix",
    "lint:css": "stylelint assets/css/**/*.css --fix",
    "format": "prettier --write assets/js/**/*.js assets/css/**/*.css",
    "format:check": "prettier --check assets/js/**/*.js assets/css/**/*.css",
    "test": "echo \"Setting up test suite...\" && exit 0",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "build:css": "postcss assets/css/custom-styles.css -o dist/css/custom-styles.min.css --env production",
    "build:js": "vite build --config vite.config.enhanced.js --mode production",
    "build:pwa": "vite build --config vite.config.enhanced.js --mode production",
    "optimize": "npm run build:css && npm run build:js",
    "clean": "rm -rf dist node_modules/.vite",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "audit": "npm audit fix",
    "performance": "lighthouse http://localhost:3000 --output html --output-path ./performance-report.html",
    "bundle:analyze": "vite build --config vite.config.enhanced.js --mode analyze"
  },
  "keywords": [
    "real-estate",
    "property-management",
    "php",
    "vite",
    "pwa",
    "modern-web",
    "performance"
  ],
  "author": "APS Dream Home Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "bootstrap": "^5.3.3",
    "flatpickr": "^4.6.13",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "lazyload": "^2.0.0-rc.2",
    "owl.carousel": "^2.3.4",
    "popper.js": "^1.16.1",
    "swiper": "^11.0.7",
    "vanilla-tilt": "^1.8.1",
    "wow.js": "^1.2.2",
    "@tailwindcss/forms": "^0.5.7",
    "tailwindcss": "^3.4.1",
    "vite-plugin-pwa": "^1.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^4.1.1",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.23.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "prettier": "^3.0.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.71.1",
    "stylelint": "^15.11.0",
    "terser": "^5.24.0",
    "vite": "^5.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
