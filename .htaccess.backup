# APS Dream Home - Simple .htaccess Configuration
# XAMPP-compatible version

# Basic security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sql|md)$">
    Require all denied
</FilesMatch>

# Set default index file
DirectoryIndex index.php index.html

# Enable mod_rewrite if available
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect to HTTPS (uncomment for production)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Block access to sensitive directories
    RewriteRule ^(includes|config|logs|backups)/.*$ - [F,L]
RewriteRule ^\.(git|svn)/ - [F,L]
</IfModule>

# Set character encoding
AddDefaultCharset UTF-8

# Basic MIME types
<IfModule mod_mime.c>
    AddType application/json .json
    AddType application/javascript .js
    AddType text/css .css
</IfModule>
