<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase removed to support dynamic folder names in XAMPP

    # EXCEPTION: For /admin, we want to use the modern router even if the folder exists
    # This prevents Apache from serving the legacy admin directory directly
    RewriteRule ^admin/?$ public/index.php [L]

    # Serve assets from public directory
    RewriteRule ^assets/(.*)$ public/assets/$1 [L]
    RewriteRule ^css/(.*)$ public/css/$1 [L]
    RewriteRule ^js/(.*)$ public/js/$1 [L]
    RewriteRule ^images/(.*)$ public/images/$1 [L]

    # Serve existing files/directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else through public/index.php (modern App pipeline)
    RewriteRule ^ public/index.php [L]
</IfModule>

# Basic error documents (optional; adjust paths if custom pages exist)
ErrorDocument 403 /errors/403.php
ErrorDocument 404 /errors/404.php