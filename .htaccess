<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase removed to support dynamic folder names in XAMPP

    # Serve existing files/directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else through public/index.php (modern App pipeline)
    RewriteRule ^ public/index.php [L]
</IfModule>

# Basic error documents (optional; adjust paths if custom pages exist)
ErrorDocument 403 /errors/403.php
ErrorDocument 404 /errors/404.php